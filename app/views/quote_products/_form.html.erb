<%= form_with(model: quote_product) do |form| %>
<%# FIXME simple_form gem can be a better alternative to standard form %>
  <% if quote_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote_product.errors.count, "error") %> prohibited this quote_product from being saved:</h2>

      <ul>
        <% quote_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product %>
    <%= form.select :product, QuoteProduct.products.keys.map{|p| [p.humanize, p] }, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div class="actions">
    <button>Add</button>
  </div>
<% end %>
